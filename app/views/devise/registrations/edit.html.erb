<h1>Edit&aacute; tus datos</h1>
<hr>
<%= devise_error_messages! %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, :class => "form-horizontal" }) do |f| %>
  
  <div class="form-group">
    <%= f.label :nombre, :class=>"col-sm-offset-3 col-sm-2 control-label" %>
    <div class="col-sm-3">
      <%= f.text_field :nombre, autofocus: true, :class=>"form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :apellido, :class=>"col-sm-offset-3 col-sm-2 control-label" %>
    <div class="col-sm-3">
      <%= f.text_field :apellido, :class=>"form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :telefono, "Teléfono", :class=>"col-sm-offset-3 col-sm-2 control-label" %>
    <div class="col-sm-3">
      <%= f.phone_field :telefono, :class=>"form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :email, :class=>"col-sm-offset-3 col-sm-2 control-label" %>
    <div class="col-sm-3">
      <%= f.text_field :email, :class=>"form-control" %>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>


  <div class="form-group">
    <%= f.label :password,"Contraseña", :class=>"col-sm-offset-3 col-sm-2 control-label" %>
  	<!-- <i>(Dejar el campo en blanco en caso de no querer cambiar tu contrase&ntilde;a)</i>-->
    <div class="col-sm-3">
      <%= f.password_field :password, autocomplete: "off", :class=>"form-control" %>
    </div>
  </div>

  <div  class="form-group">
    <%= f.label :password_confirmation,"Reingresar contraseña", :class=>"col-sm-offset-3 col-sm-2 control-label" %>
    <div class="col-sm-3">
      <%= f.password_field :password_confirmation, autocomplete: "off", :class=>"form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :current_password, "Contraseña actual", :class=>"col-sm-offset-3 col-sm-2 control-label" %>
    <div class="col-sm-3"> 
  	<!-- <i>(Necesitamos tu contrase&ntilde;a actual para confirmar los cambios)</i> -->
      <%= f.password_field :current_password, autocomplete: "off", :class=>"form-control" %>
    </div>
  </div>
    
  <div class="center"><%= f.submit "Actualizar", :class=>"btn btn-default" %></div>
<% end %>

<div class="center">
  <h3>Cerrar mi cuenta</h3>
  <hr>
  <p>¿Descontento? <%= button_to "Cerrar mi cuenta", registration_path(resource_name), data: { confirm: "¿Estás seguro?" }, method: :delete %></p>

  <%= link_to "Volver", :back, class: "btn" %>
</div>
