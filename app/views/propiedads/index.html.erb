<span class="btn btn-info"> <%= link_to 'PUBLICAR PROPIEDAD', new_propiedad_path %> </span>

<h1>Lista de propiedades</h1>

<table class="table table-condensed">
	<thead>
		<tr>
			<th>Dirección</th>
			<th>Número</th>
			<th>Piso</th>
			<th>Depto</th>
			<th>Operación</th>
			<th>Amenities</th>
			<th>Precio</th>
			<th>Moneda</th>
			<th>Superficie</th>
			<th>Superficie no cubierta</th>
			<th>Barrio</th>
			<th>Tipo</th>
			<th>Fotos</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @propiedads.each do |propiedad| %>
		<tr>
			<td><%= propiedad.direccion %></td>
			<td><%= propiedad.numero %></td>
			<td><%= propiedad.piso %></td>
			<td><%= propiedad.departamento %></td>
			<td><%= propiedad.operacion.tipo %></td>

			<td> <% propiedad.amenities.each do |a| %>
			<%= a.nombre %>
			<% if a != propiedad.amenities.last %>
			<%= ", " %>
			<% end %>
			<% end %> </td>

			<td><%= propiedad.precio %></td>
			<td><%= propiedad.moneda.nombre %></td>
			<td><%= propiedad.superficie %></td>
			<td><%= propiedad.superficie_nc %></td>
			<td><%= propiedad.barrio.nombre %></td>
			<td><%= propiedad.tipo_propiedad.nombre %></td>

			<td> <% propiedad.fotos.each do |foto| %>
			<%= image_tag foto.nombre_url(:thumb) if foto.nombre? %>
			<% end %> </td>

			<td><%= link_to 'Ver', propiedad %></td>
			<td><%= link_to 'Editar', edit_propiedad_path(propiedad) %></td>
			<td><%= link_to 'Eliminar', propiedad, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<br>
