<%= form_for(@propiedad) do |f| %>
<% if @propiedad.errors.any? %>
<div id="error_explanation">
	<h2><%= pluralize(@propiedad.errors.count, "error") %> prohibited this propiedad from being saved:</h2>

	<ul>
		<% @propiedad.errors.full_messages.each do |message| %>
		<li>
			<%= message %>
		</li>
		<% end %>
	</ul>
</div>
<% end %>
<h2>Datos de operacion</h2>
<hr>
<div class="field center">
	<%= f.label :tipo_propiedad_id %>
	<%= f.collection_select :tipo_propiedad_id, TipoPropiedad.all, :id, :nombre, :selected => @propiedad.tipo_propiedad_id %>
</div>
<div class="field center">
	<%= f.label :operacion_id %>
	<%= f.collection_select :operacion_id, Operacion.all, :id, :tipo, :selected => @propiedad.operacion_id %>
</div>
<br>
<h2>Ubicaci√≥n</h2>
<hr>
<div class="field center">
	<%= f.label :barrio_id %>
	<%= f.collection_select :barrio_id, Barrio.all, :id, :nombre, :selected => @propiedad.barrio_id %>
</div>
<div class="field center">
	<%= f.label :direccion %>
	<%= f.text_field :direccion %>
</div>
<div class="field center">
	<%= f.label :numero %>
	<%= f.text_field :numero %>

	<%= f.label :piso %>
	<%= f.text_field :piso %>

	<%= f.label :departamento %>
	<%= f.text_field :departamento %>
</div>
<br>
<h2>Datos del inmueble</h2>
<hr>
<div class="field center">
	<%= f.label :descripcion %>
	<%= f.text_area :descripcion %>
</div>
<div class="field center">
	<%= f.label :antiguedad %>
	<%= f.text_field :antiguedad %>
</div>
<div class="field center">
	<%= f.label :superficie %>
	<%= f.text_field :superficie %>
</div>
<div class="field center">
	<%= f.label "Superficie No Cub" %>
	<%= f.text_field :superficie_nc %>
</div>
<div class="field center">
	<%= f.label :dormitorios %>
	<%= f.text_field :dormitorios %>
</div>
<div class="field center">
	<%= f.label :ambientes %>
	<%= f.text_field :ambientes %>
</div>
<br>
<h2>Precio</h2>
<hr>
<div class="field center">
	<%= f.label :moneda_id %>
	<%= f.collection_select :moneda_id, Moneda.all, :id, :nombre, :selected => @propiedad.moneda_id %>
</div>
<div class="field center">
	<%= f.label "Amenities" %>
	<br>
	<% @amenities.each do |a| %>
	<%= f.label a.nombre %>
	<% if @propiedad.tieneamenities%>
	  <%= check_box(:tieneamenities, a.nombre, checked: "checked") %>
	<% else  %>
	  <%= check_box(:tieneamenities, a.nombre) %>
	<% end  %>
	<% end  %>
</div>
<br>
<div class="field center">
	<%= f.label :precio %>
	<%= f.text_field :precio %>
</div>
<div class="field center">
	<%= f.label :expensas %>
	<%= f.text_field :expensas %>
</div>

<div class="actions center">
	<%= f.submit %>
</div>
<% end %>
