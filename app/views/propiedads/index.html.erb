<h1>Lista de propiedades</h1>

<table>
	<thead>
		<tr>
			<th>Direccion</th>
			<th>Precio</th>
			<th>Superficie</th>
			<th>Ambientes</th>
			<th>Barrio</th>
			<th>Tipo</th>
			<th>Fotos</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @propiedads.each do |propiedad| %>
		<tr>
			<td><%= propiedad.direccion %></td>
			<td><%= propiedad.precio %></td>
			<td><%= propiedad.superficie %></td>
			<td><%= propiedad.ambientes %></td>
			<td><%= propiedad.barrio.nombre %></td>
			<td><%= propiedad.tipo_propiedad.nombre %></td>
			<!--	<td><%= image_tag propiedad.foto_url(:thumb) if propiedad.foto? %></td> -->
			
			<td>
			<% propiedad.fotos.each do |foto| %>
			<%= image_tag foto.nombre_url(:thumb) if foto.nombre? %>
			<% end %>
			 </td>

			<td><%= link_to 'Show', propiedad %></td>
			<td><%= link_to 'Edit', edit_propiedad_path(propiedad) %></td>
			<td><%= link_to 'Destroy', propiedad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<br>

