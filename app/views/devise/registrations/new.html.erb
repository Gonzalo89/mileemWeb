<h1>Registro</h1>
<hr>
<%= devise_error_messages! %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>
 
  <div class="form-group">
		<%= f.label :nombre,"Nombre", :class=>"col-sm-offset-3 col-sm-2 control-label" %>
    <div class="col-sm-3">
      <%= f.text_field :nombre, autofocus: true, :class=>"form-control" %>
    </div>
  </div>
  
  <div class="form-group">
  	<%= f.label :apellido, "Apellido", :class=>"col-sm-offset-3 col-sm-2 control-label" %>
    <div class="col-sm-3">
      <%= f.text_field :apellido, :class=>"form-control" %>
    </div>
  </div>
  
  <div class="form-group">
  	<%= f.label :telefono, "Teléfono", :class=>"col-sm-offset-3 col-sm-2 control-label" %>
    <div class="col-sm-3">
      <%= f.phone_field :telefono, :class=>"form-control" %>
    </div>
  </div>
  
  <div class="form-group">
  	<%= f.label :email, "Email", :class=>"col-sm-offset-3 col-sm-2 control-label" %>
    <div class="col-sm-3">
      <%= f.text_field :email, :class=>"form-control" %>
    </div>
  </div>
  
  <div class="form-group">
  	<%= f.label :password,"Contraseña", :class=>"col-sm-offset-3 col-sm-2 control-label" %>
    <div class="col-sm-3"> 
  	<!--<% if @validatable %><i>(<%= @minimum_password_length %> caracteres como mínimo)</i><% end %> -->
      <%= f.password_field :password, autocomplete: "off", :class=>"form-control" %>
    </div>
  </div>

  <div class="form-group">
  	<%= f.label :password_confirmation,"Reingresá tu contraseña", :class=>"col-sm-offset-3 col-sm-2 control-label" %>
    <div class="col-sm-3">
      <%= f.password_field :password_confirmation, autocomplete: "off", :class=>"form-control" %>
    </div>
  </div>

  <div class="center"><%= f.submit "Registrar", :class=>"btn btn-default" %></div>
<% end %>

<div class="center">
  <%= render "devise/shared/links" %>
</div>
