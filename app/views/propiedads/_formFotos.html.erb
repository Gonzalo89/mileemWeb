<h2>Fotos</h2>
<hr>
<% @propiedad.fotos.each do |foto| %>
<p class="center">
	<%= image_tag foto.nombre if foto.nombre? %>
	<span class="center"><%= button_to 'Eliminar', foto, method: :delete, data: { confirm: '¿Estás seguro?' } %></span>
</p>
<% end %>

<hr>
<%= form_for([@propiedad, @propiedad.fotos.build]) do |f| %>
<p>
	<span class="camposInline"><%= f.label "Agregar foto" %><span style:"color: red; font-size: 0.8em; white-space:normal;"> (Hasta 5MB)</span></span>
	<br>
	<%= f.file_field :nombre , :id => "archivo", :required => true %>
</p>
<p>
	<%= f.submit %>
</p>
<% end %>
<hr>